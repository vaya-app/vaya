{
  "name": "vaya",
  "version": "0.0.1",
  "scripts": {
    "lint": "eslint 'src/**/*.{js,vue}'",
    "lint:fix": "eslint 'src/**/*.{js,vue}' --fix",
    "dev:vue": "vite",
    "dev:electron": "electron .",
    "build:vue": "vite build",
    "build:electron": "rm -rf build && electron-builder build"
  },
  "main": "src/background.js",
  "build": {
    "directories": {
      "output": "build"
    },
    "mac": {
      "target": "dmg"
    },
    "files": [
      "src/background.js",
      "dist"
    ]
  },
  "dependencies": {
    "bulma": "^0.9.2",
    "vue": "^3.0.6"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.1.5",
    "@vue/compiler-sfc": "^3.0.6",
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1",
    "electron-reloader": "^1.2.0",
    "eslint": "^7.20.0",
    "eslint-plugin-vue": "^7.6.0",
    "vite": "^2.0.3"
  },
  "engines": {
    "node": "14.2.0",
    "npm": "6.14.4"
  },
  "license": "MIT"
}
